<Window x:Class="JParts.Windows.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JParts.Windows"
        mc:Ignorable="d"
        Title="PopupWindow" Height="80" Width="200" Background="#b6002c"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Top="0">
    <Grid>
        <TextBlock Text="{Binding Message}" Margin="5" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Stretch" Background="Transparent" TextWrapping="Wrap"/>
    </Grid>
</Window>
