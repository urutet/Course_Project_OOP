<UserControl x:Class="JParts.MVVM.View.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JParts.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="2" Width="40" Height="40" Command="{Binding AddPartCommand}">
            <Image Source="/Images/Add.png"/>
        </Button>

        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      Grid.Row="1"
                      Grid.RowSpan="5"
                      Grid.Column="1"
                      Grid.ColumnSpan="5"
                      FontFamily="Montserrat">
            <ListBox x:Name="ordersList" Background="Transparent"
                     BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel x:Name="orderTemplate"
                                Background="#f0f0f0"
                                Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition MinWidth="150" />
                                    <ColumnDefinition MinWidth="300" />
                                    <ColumnDefinition MinWidth="100" />
                                    <ColumnDefinition MinWidth="50" />
                                    <ColumnDefinition MinWidth="50" />
                                    <ColumnDefinition MinWidth="50" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition MaxHeight="50"/>
                                </Grid.RowDefinitions>
                                <Image  MinWidth="50" MaxWidth="50"
                                                MinHeight="50" MaxHeight="50"
                               Grid.Column="0" Source="{Binding Path=image}"></Image>
                                <TextBlock Margin="5" 
                                   VerticalAlignment="Center"
                                   Grid.Column="1"
                                   TextWrapping="Wrap" Text="{Binding Path=Name}"></TextBlock>
                                <TextBlock 
                                   VerticalAlignment="Center"
                                   Grid.Column="2"
                                   MaxWidth="300"
                                   TextWrapping="Wrap" Text="{Binding Path=ShortDef}"></TextBlock>
                                <TextBlock Margin="20" 
                                   VerticalAlignment="Center"
                                   Grid.Column="3"
                                   TextWrapping="Wrap" Text="{Binding Path=Price}"></TextBlock>
                                <Button       Margin="5"
                                   Grid.Column="4"
                                   Background="#b6002c">
                                    <Image Source="/Images/Cart.png"
                                       Width="50"
                                       Height="50"/>
                                </Button>
                                <Button       Margin="5"
                                   Grid.Column="5"
                                   Background="#b6002c">
                                    <Image Source="/Images/Cart.png"
                                       Width="50"
                                       Height="50"/>
                                </Button>
                                <Button       Margin="5"
                                   Grid.Column="6"
                                   Background="#b6002c">
                                    <Image Source="/Images/Cart.png"
                                       Width="50"
                                       Height="50"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
