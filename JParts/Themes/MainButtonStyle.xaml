<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:JParts.Themes">
    <ControlTemplate TargetType="Button" x:Key="btTemplate">
        <Border x:Name="buttonBackgrnd" Background="#b6002c"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="10">
            <ContentControl Foreground="White"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontFamily="Montserrat"
                                   FontWeight="SemiBold"
                                   Margin="5" Content="{TemplateBinding Content}"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="buttonBackgrnd" Property="Background" Value="Black"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter Property="Foreground" Value="LightGray"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>